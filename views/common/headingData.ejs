<div class="heading row m-0 p-0 bg-primary pt-4 pb-5">
    <div class="upperNav row m-0 p-0 ps-3">
        <div class="left row col-6 d-flex flex-row justify-content-start align-items-center">
            <img src="../../images/userDashboard/logo.png" alt="" />
            <div class="search d-flex justify-content-end align-items-center col-8">
                <input type="text" class="form-control p-2" placeholder="search" />
                <i class="bi bi-search position-absolute me-3"></i>
            </div>
        </div>
        <div class="right col-6 d-flex justify-content-end align-items-center">
            <div class="notification rounded-5 p-2 d-flex align-items-center justify-content-center me-3">
                <i class="bi bi-bell p-0 m-0"></i>
                <div
                    class="notificationCount bg-light p-1 d-flex align-items-center justify-content-center position-absolute">
                    <p class="p-0 m-0">5</p>
                </div>
            </div>
            <div class="profileImg profileImgLeft rounded-5 overflow-hidden col-4 p-0 d-flex">
                <img src="../../images/userDashboard/userImg.jpg" alt="" />
            </div>
            <div class="profileToolPit col-2 position-absolute m-0 p-0 z-1 d-none">
                <div class="card m-0 pt-2 w-auto border-0 overflow-hidden">
                    <p class="m-0 p-0 fs-5 fw-bold text-secondary ps-3">WELCOME!</p>
                    <li class="list-unstyled  p-0  ">
                        <a href="/myProfile" class="text-decoration-none ps-4 pt-3 pb-3 m-0  text-dark d-flex align-items-center">
                            <i class="la la-user text-dark fs-4"></i>
                            <p class="m-0 p-0 w-auto ps-2 fs-6">My Profile</p>
                        </a>
                    </li>
                    <li class="list-unstyled  p-0  ">
                        <a href="/myBooking" class="text-decoration-none ps-4 pt-3 pb-3 m-0  text-dark d-flex align-items-center">
                            <i class="la la-shopping-cart ext-dark fs-4"></i>
                            <p class="m-0 p-0 w-auto ps-2 fs-6">My Booking</p>
                        </a>
                    </li>
                    <li class="list-unstyled  p-0  ">
                        <a href="/myReviews" class="text-decoration-none ps-4 pt-3 pb-3 m-0  text-dark d-flex align-items-center">
                            <i class="la la-heart text-dark fs-4"></i>
                            <p class="m-0 p-0 w-auto ps-2 fs-6">My Reviews</p>
                        </a>
                    </li>
                    <li class="list-unstyled  p-0  ">
                        <a href="/userSetting" class="text-decoration-none ps-4 pt-3 pb-3 m-0  text-dark d-flex align-items-center">
                            <i class="la la-gear text-dark fs-4"></i>
                            <p class="m-0 p-0 w-auto ps-2 fs-6">Settings</p>
                        </a>
                    </li>
                    <li class="list-unstyled  p-0  ">
                        <a href="/" class="text-decoration-none ps-4 pt-3 pb-3 m-0  text-dark d-flex align-items-center">
                            <i class="la la-power-off text-dark fs-4"></i>
                            <p class="m-0 p-0 w-auto ps-2 fs-6">Logout</p>
                        </a>
                    </li>
                </div>
            </div>
            <p class="p-0 m-0 ps-3 text-light">
                <%= user.name%>
            </p>
        </div>
    </div>
    <div class="lowerNav row m-0 p-0 d-flex align-items-center p-4">
        <div class="col-6 d-flex align-items-center">
            <h2 class="text-light p-0 m-0">
                <%= page%>
            </h2>
        </div>
        <div class="breadcrumb_items col-6 d-flex align-items-center justify-content-end">
            <nav class="w-auto" style="
      --bs-breadcrumb-divider: url(
        &#34;data:image/svg + xml,
        %3Csvgxmlns='http://www.w3.org/2000/svg'width='8'height='8'%3E%3Cpathd='M2.5 0L1 1.5 3.5 4 1 6.5 2.5 8l4-4-4-4z'fill='%236c757d'/%3E%3C/svg%3E&#34;
      );
    " aria-label="breadcrumb">
                <ol class="breadcrumb w-auto p-2 rounded-2 m-0">
                    <li class="breadcrumb-item">
                        <a href="#" class="text-light">Home</a>
                    </li>
                    <li class="breadcrumb-item text-light" aria-current="page">
                        <a href="/userDashboard" class="text-light">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active text-light" aria-current="page">
                        <%= page%>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>